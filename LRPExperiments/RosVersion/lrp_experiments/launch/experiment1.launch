<launch>

  <!-- turtlebot world launch -->
  <include file="$(find turtlebot_gazebo)/launch/turtlebot_world.launch"/>

	<!-- navigation stack -->
	<include file="$(find turtlebot_gazebo)/launch/amcl_demo.launch"/>
	<param name="map_file" value="/opt/ros/indigo/share/turtlebot_gazebo/maps/playground.yaml"/>

	<!-- navigation viz (not necessary) -->
 	<include file="$(find turtlebot_rviz_launchers)/launch/view_navigation.launch"/>
	
	<!-- necessary nodes -->
	<node name="lrp_exp_bumper" pkg="sensors_simulator" type="bumper_sim.py" required="true" />
	<node name="lrp_exp_object" pkg="sensors_simulator" type="object_sim.py" required="true" />


	<!-- init node for get the correct message type into lrp -->
	<node name="lrp_exp_data" pkg="sensors_simulator" type="data_sub.py" respawn="true" />


</launch>
